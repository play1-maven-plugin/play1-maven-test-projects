<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
        <groupId>com.google.code.maven-play-plugin</groupId>
        <artifactId>play-app-default-parent</artifactId>
        <version>1.0.0-beta7</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.google.code.maven-play-plugin.org.playframework.modules.scala</groupId>
    <artifactId>play-with-scala</artifactId>
    <version>1.0.0-beta8-SNAPSHOT</version>
    <packaging>play</packaging>

    <name>Play! Framework Maven Test Projects : External Modules : Scala : Play with Scala</name>
    <description>Play! Framework Maven Test Projects : External Modules : Scala : Play with Scala</description>
    <url>https://maven-play-plugin.googlecode.com/svn/trunk/test-projects/external-modules/scala/play-with-scala/</url>

    <!-- Scala module not published to Maven central repository yet -->
    <repositories>
        <repository>
            <id>com.google.code.maven-play-plugin</id>
            <name>Maven Play Plugin - releases</name>
            <url>https://maven-play-plugin.googlecode.com/svn/mavenrepo/releases</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>

    <scm>
        <connection>scm:svn:http://maven-play-plugin.googlecode.com/svn/trunk/test-projects/external-modules/scala/play-with-scala/</connection>
        <developerConnection>scm:svn:https://maven-play-plugin.googlecode.com/svn/trunk/test-projects/external-modules/scala/play-with-scala/</developerConnection>
        <url>http://maven-play-plugin.googlecode.com/svn/trunk/test-projects/external-modules/scala/play-with-scala/</url>
    </scm>

    <developers>
        <developer>
            <id>gslowikowski</id>
            <name>Grzegorz Slowikowski</name>
            <email>gslowikowski@gmail.com</email>
            <roles>
                <role>Mavenizer</role>
            </roles>
            <timezone>+1</timezone>
        </developer>
    </developers>

    <properties>
        <play-scala.version>0.9.1</play-scala.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.google.code.maven-play-plugin.org.playframework.modules.scala</groupId>
            <artifactId>play-scala</artifactId>
            <version>${play-scala.version}</version>
        </dependency>

        <dependency>
            <groupId>com.google.code.maven-play-plugin.org.playframework.modules.scala</groupId>
            <artifactId>play-scala</artifactId>
            <version>${play-scala.version}</version>
            <classifier>module-min</classifier>
            <type>zip</type>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <skip>true</skip> <!-- no unit tests -->
                </configuration>
            </plugin>

            <plugin>
                <groupId>com.google.code.maven-play-plugin</groupId>
                <artifactId>play-maven-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <precompileFork>true</precompileFork>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>autodeps</id>

            <build>
                <plugins>
                    <plugin>
                        <groupId>com.google.code.maven-play-plugin</groupId>
                        <artifactId>play-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>play-dependencies</id>
                                <phase>validate</phase>
                                <goals>
                                    <goal>dependencies</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>play13</id>

            <properties>
                <play.version>1.3.0</play.version>
            </properties>

            <dependencies>
                <dependency>
                    <groupId>com.google.code.maven-play-plugin.org.playframework.modules.docviewer</groupId>
                    <artifactId>play-docviewer</artifactId>
                    <version>${play.version}</version>
                    <scope>provided</scope>
                </dependency>
            </dependencies>
        </profile>
    </profiles>

</project>